<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        body{
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
    </style>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
   
    <div >
        <h1>URL Shortner</h1>
        <div>
            <form method="POST" action="/url">
                <label for="">Enter the url:</label>
                <input type="text" name= "url" placeholder="https://example.com/">
                <button type = "submit">Generate ShortURL</button>
            </form>
        </div>
        
        <% if (locals.id) { %>
        <p>Your Generated-link is: <a href="http://localhost:1000/url/<%= id  %>">http://localhost:1000/url/<%= id  %></a></p>
        <% } %>

        <div style="margin-top: 30px">
            <% if (locals.urls) { %>
            <table>
                <thead>
                    <th>S.No.</th>
                    <th>shortID</th>
                    <th>Redirect</th>
                    <th>Click</th>
                </thead>
                <tbody>
                    
                        <% urls.forEach((url, index) => { %>
                        <tr>
                        <td><%= index+1 %></td>
                        <td><%= url.shortID %></td>
                        <td><%= url.redirectURL %></td>
                        <td><%= url.visitHistory.length %></td>
                        </tr>
                        <% }) %>
                    
                </tbody>
            </table>
            <% } %>
        </div>
    </div> 
</body>
</html>